        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSecondaryLight">@color/firePrimaryLightColor</item>
        <item name="toolbar_background_color">?attr/colorPrimary</item>
    </style>

    <style name="LightingStorm" parent="Notepad">
