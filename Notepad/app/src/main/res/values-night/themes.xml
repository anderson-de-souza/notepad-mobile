        <item name="colorSecondaryVariant">@color/lightingStormSecondaryDarkColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSecondaryLight">@color/lightingStormPrimaryLightColor</item>
        <item name="toolbar_background_color">?attr/colorPrimary</item>
    </style>

    <style name="Nature" parent="Notepad">
        <item name="colorPrimary">@color/naturePrimaryColor</item>
        <item name="colorPrimaryVariant">@color/naturePrimaryDarkColor</item>
