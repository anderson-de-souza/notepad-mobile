    <style name="Ocean" parent="Notepad">
        <item name="colorPrimary">@color/oceanPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/oceanPrimaryDarkColor</item>
        <item name="colorSecondary">@color/oceanSecondaryColor</item>
